{
  "name": "storyblok-design-system",
  "version": "1.12.0",
  "description": "A collection of Vue components used in the Storyblok app",
  "repository": {
    "type": "git",
    "url": "https://github.com/storyblok/storyblok-design-system.git"
  },
  "scripts": {
    "serve": "vue-cli-service serve",
    "build": "yarn legacy vue-cli-service build --target lib ./src/main.js",
    "test:unit": "vue-cli-service test:unit",
    "lint": "vue-cli-service lint src/ tests/ .storybook/",
    "lint:style": "stylelint 'src/**/*.{vue,scss}' --config ./.stylelintrc.json --fix",
    "build-storybook": "build-storybook",
    "storybook": "start-storybook -p 6006 --ci",
    "prepare": "npm run build",
    "legacy": "cross-env NODE_OPTIONS=--openssl-legacy-provider"
  },
  "main": "dist/storyblok-design-system.common.js",
  "dependencies": {
    "@popperjs/core": "^2.11.6",
    "dayjs": "^1.11.5",
    "maska": "^1.5.0",
    "portal-vue": "^2.1.7",
    "throttle-debounce": "^4.0.1",
    "vue-fragment": "^1.6.0"
  },
  "peerDependencies": {
    "vue": "^2.7.13"
  },
  "devDependencies": {
    "@babel/core": "^7.18.13",
    "@storybook/addon-essentials": "^6.5.12",
    "@storybook/addons": "^6.5.12",
    "@storybook/preset-scss": "^1.0.3",
    "@storybook/theming": "^6.5.12",
    "@storybook/vue": "^6.5.12",
    "@vue/cli-plugin-babel": "~4.5.19",
    "@vue/cli-plugin-eslint": "~4.5.19",
    "@vue/cli-plugin-unit-jest": "~4.5.19",
    "@vue/cli-service": "~4.5.19",
    "@vue/eslint-config-standard": "^5.1.2",
    "@vue/test-utils": "^1.3.0",
    "babel-eslint": "^10.1.0",
    "babel-loader": "^8.2.5",
    "babel-preset-vue": "^2.0.2",
    "chromatic": "^6.7.4",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^6.15.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^3.4.1",
    "eslint-plugin-promise": "^4.3.1",
    "eslint-plugin-standard": "^4.1.0",
    "eslint-plugin-vue": "^7.20.0",
    "lint-staged": "^10.5.4",
    "prettier": "^2.7.1",
    "sass": "^1.53.0",
    "sass-loader": "^8.0.2",
    "style-loader": "^2.0.0",
    "style-resources-loader": "^1.5.0",
    "stylelint": "^13.13.1",
    "stylelint-config-sass-guidelines": "^8.0.0",
    "stylelint-config-standard": "^22.0.0",
    "stylelint-order": "^4.1.0",
    "vue": "^2.7.13",
    "vue-template-compiler": "^2.7.13"
  },
  "gitHooks": {
    "pre-commit": "lint-staged"
  },
  "lint-staged": {
    "*.{js,jsx,vue}": [
      "vue-cli-service lint",
      "git add"
    ],
    "*.{vue,scss,css}": [
      "stylelint --config .stylelintrc.json --fix"
    ]
  },
  "release": {
    "branches": [
      "master"
    ]
  }
}
